<% address_id = address_type.chars.first %>

<% if Spree::Config[:company] %>
  <div class="form-group" id=<%= "#{address_id}company" %>>
    <%= form.label :company, Spree.t(:company) %>
    <br/>
    <%= form.text_field :company, :class => 'form-control' %>
  </div>
<% end %>
<div class="form-group has-feedback" id=<%= "#{address_id}address1" %>>
  <%= form.label :address1, "Address line 1" %> 
  <br/>
  <%= form.text_field :address1, :class => 'form-control  required', :placeholder => '(Street address, P.O. box, company name)' %>
  <span class="glyphicon glyphicon-ok form-control-feedback"></span>
  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
</div>
<div class="form-group  has-feedback" id=<%= "#{address_id}address2" %>>
  <%= form.label :address2, "Address line 2" %>
  <br/>
  <%= form.text_field :address2, :class => 'form-control', :placeholder => '(Apartment, suite, unit, building, floor, etc.)' %>
  <span class="glyphicon glyphicon-ok form-control-feedback"></span>
  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="form-group  has-feedback" id=<%= "#{address_id}zipcode" %>>
      <label>Zip Code</label>
      <br/>
      <%= form.text_field :zipcode, :class => 'form-control required' %>
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
    </div>
  </div>
  <div class="col-md-6 address-hidden">
    <div class="form-group  has-feedback" id=<%= "#{address_id}city" %>>
      <%= form.label :city, Spree.t(:city) %>
      <br/>
      <%= form.text_field :city, :class => 'form-control required' %>
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
    </div>
  </div>
</div>
