<div class="form-group" id=<%= "#{address_id}country" %>>
  <%= form.label :country_id, Spree.t(:country) %>
  <br/>
    <span id=<%= "#{address_id}country-selection" %>>
      <%= form.select :country_id, options_for_select(available_countries.map { |c| [c.name, c.id, {'data-iso' => c.iso}] }, selected = form.object.country_id), {}, {:class => 'form-control required'} %>
    </span>
</div>

<% if Spree::Config[:address_requires_state] %>
  <div class="form-group" id=<%= "#{address_id}state" %>>
    <% have_states = !address.country.states.empty? %>
    <%= form.label :state, Spree.t(:state) %>
    <span class='required' id=<%= "#{address_id}state-required" %>>*</span><br/>

    <% state_elements = [
        form.select(:state_id, options_for_select(address.country.states.map { |s| [s.name, s.id, {'data-abbr' => s.abbr}] }, selected = form.object.state_id),
            {:include_blank => true},
            {:class => have_states ? 'form-control required' : 'form-control hidden',
                :disabled => !have_states}) +
            form.text_field(:state_name,
                :class => !have_states ? 'form-control required' : 'form-control hidden',
                :disabled => have_states)
    ].join.gsub('"', "'").gsub("\n", "")
    %>
    <%= javascript_tag do -%>
      $('#<%= "#{address_id}state" %>').append("<%== state_elements %>");
    <% end %>
  </div>
  <noscript>
    <%= form.text_field :state_name, :class => 'form-control required' %>
  </noscript>
<% end %>
