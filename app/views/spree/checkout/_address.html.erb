<div class="row">
  <div class="col-sm-6" data-hook="billing_fieldset_wrapper">
    <h4>Your Information</h4>
    <% unless @order.email? %>

      <p class="field">
        <%= form.label :email %><br />
        <%= form.text_field :email, class: "form-control" %>
      </p>

    <% end %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group" id="firstname">
          <%= form.label :firstname, Spree.t(:first_name) %>
          <br/>
          <%= form.text_field :firstname, :class => 'form-control required' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group" id="lastname">
          <%= form.label :lastname, Spree.t(:last_name) %>
          <br/>
          <%= form.text_field :lastname, :class => 'form-control required' %>
        </div>
      </div>
    </div>
    <div class="form-group" id="phone">
      <%= form.label :phone, Spree.t(:phone) %>
      <br/>
      <%= form.phone_field :phone, :class => 'form-control required' %>
    </div>

    <!--<div class="form-group">
      <label>Choose a Password (optional)</label>
      <input type="password" class="form-control"/>
      <span class="help-block">Choosing a password allows you to easily track and manage your order and warranty online</span>
    </div>
    <div class="hidden">
      <div class="form-group">
        <label>Confirm Password</label>
        <input type="password"/>
      </div>
    </div>-->
  </div>

  <div class="col-sm-6" data-hook="shipping_fieldset_wrapper">

    <div id="billing" data-hook>
      <h4>Shipping Address</h4>
      <%= form.fields_for :bill_address do |bill_form| %>

          <%= render :partial => 'spree/address/form', :locals => { :form => bill_form, :address_type => 'billing', :address => @order.bill_address } %>

      <% end %>
    </div>
    <div id="shipping" data-hook>
      <%= form.fields_for :ship_address do |ship_form| %>

          <p class="field checkbox" data-hook="use_billing">
            <%= check_box_tag 'order[use_billing]', '1', @order.shipping_eq_billing_address? %>
            <%= label_tag :order_use_billing, "Use this as billing address", :id => 'use_billing' %>
          </p>
          <%= render :partial => 'spree/address/form', :locals => { :form => ship_form, :address_type => 'shipping', :address => @order.ship_address } %>

      <% end %>
    </div>
  </div>
</div>

<div class="well text-right form-buttons" data-hook="buttons">
  <span class="pull-left text-left">
      <i class="glyphicon glyphicon-lock"></i> Secure<br/>Your data is encrypted
  </span>

  <%= submit_tag Spree.t(:save_and_continue), :class => 'btn btn-lg btn-success' %>

  <span data-hook="save_user_address">
    &nbsp; &nbsp;
    <%= check_box_tag 'save_user_address', '1', try_spree_current_user.respond_to?(:persist_order_address) %>
    <%= label_tag :save_user_address, Spree.t(:save_my_address) %>
  </span>
</div>
