    <label for="order_bill_address_attributes_country_id">Country</label><br>
    <span id="bcountry-selection">
      <select class="form-control required" id="order_bill_address_attributes_country_id" name="order[bill_address_attributes][country_id]"></select>
    </span>
  </div>

    <div class="form-group" id="bstate" style="display: none;">
